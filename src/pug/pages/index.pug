extends ../layouts/default

include ../mixins/product-card

block header
    header.header
        .container
            // Здесь будет навигация, лого и иконка корзины

block content
    section.promo
        .container
            h1.promo__title Краски
            // Здесь будет слайдер

    section.catalog
        .container
            .catalog__controls
                // Здесь будут фильтры и сортировка
            .catalog__grid
                // Сюда JS будет вставлять карточки.
                // Пока что добавим одну вручную для проверки верстки
                +product-card({id: 1, name: 'Синий подсвечник', price: '1 400',
                    image: 'data:image/jpeg;base64,'
                })

block modals
    // Модальное окно корзины (пока скрыто)
    .cart-modal.cart-modal--hidden
        .cart-modal__overlay
        .cart-modal__content
            h2.cart-modal__title Корзина
            button.cart-modal__close-btn(type="button") &times;
            .cart-modal__items
                // Сюда JS будет добавлять товары в корзине
            .cart-modal__footer
                p.cart-modal__total Итого: 0 ₽
                button.cart-modal__order-btn Оформить заказ
