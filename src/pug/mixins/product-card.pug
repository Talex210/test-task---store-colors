mixin product-card(product)
    article.product-card(data-product-id=product.id)
        .product-card__image-container
            img.product-card__image(src=product.image, alt=product.name)
        .product-card__info
            h3.product-card__name= product.name
            p.product-card__price= product.price + ' ₽'
